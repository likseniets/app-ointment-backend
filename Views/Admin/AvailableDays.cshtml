@model IEnumerable<app_ointment_backend.Models.AvailableDay>

@{
    ViewData["Title"] = "Tilgjengelige Dager";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-calendar3"></i> Tilgjengelige Dager</h1>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Tilbake til dashboard
    </a>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <h4>Alle Tilgjengelige Dager (@Model.Count())</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Helsepersonell</th>
                        <th>Dato</th>
                        <th>Starttid</th>
                        <th>Sluttid</th>
                        <th>Status</th>
                        <th>Notater</th>
                        <th>Handlinger</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model)
                    {
                        <tr>
                            <td>@day.HealthcarePersonnel.Name</td>
                            <td>@day.Date.ToString("dd MMM yyyy")</td>
                            <td>@day.StartTime.ToString(@"hh\:mm")</td>
                            <td>@day.EndTime.ToString(@"hh\:mm")</td>
                            <td>
                                @if (day.IsBooked)
                                {
                                    <span class="badge bg-secondary">Opptatt</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Ledig</span>
                                }
                            </td>
                            <td>@(string.IsNullOrEmpty(day.Notes) ? "-" : day.Notes)</td>
                            <td>
                                <a href="@Url.Action("Edit", "AvailableDays", new { id = day.Id })" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Rediger
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
