@model IEnumerable<app_ointment_backend.Models.User>

@{
    ViewData["Title"] = "Administrer Brukere";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Administrer Brukere</h1>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Tilbake til dashboard
    </a>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Alle Brukere (@Model.Count())</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Navn</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Rolle</th>
                        <th>Opprettet</th>
                        <th>Handlinger</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>
                                <span class="badge bg-@(user.Role == app_ointment_backend.Models.UserRole.HealthcarePersonnel ? "primary" : user.Role == app_ointment_backend.Models.UserRole.Elderly ? "info" : "danger")">
                                    @user.Role
                                </span>
                            </td>
                            <td>@user.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a href="@Url.Action("Details", "Users", new { id = user.Id })" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Se
                                </a>
                                @if (user.Role != app_ointment_backend.Models.UserRole.Admin)
                                {
                                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Slett
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
