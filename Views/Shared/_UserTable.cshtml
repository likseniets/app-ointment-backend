@model IEnumerable<User>

<div class="container">
    <table class='table table-striped'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role</th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>
                    <a asp-controller="User"
                        asp-action="Details"
                        asp-route-id="@user.UserId">@user.Name</a>
                </td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Update" asp-route-id="@user.UserId">Update</a>
                    <a asp-action="Delete" asp-route-id="@user.UserId">Delete</a>
                    @if (user.Role == UserRole.Caregiver)
                    {
                        <span> | </span>
                        <a asp-controller="Availability" asp-action="Manage" asp-route-caregiverId="@user.UserId">Manage Availability</a>
                    }
                </td>
            </tr>
        }
    
    </table>
    <p>
        <a class="btn btn-secondary"
            asp-controller="User"
            asp-action="Create">Create new user</a>
    </p>
</div>