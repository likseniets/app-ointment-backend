@model app_ointment_backend.Models.ClientDashboardViewModel

@{
    ViewData["Title"] = "Client Dashboard";
}

<h2>Client Dashboard</h2>

<div class="row">
    <!-- Mine avtaler - Venstre side -->
    <div class="col-md-6">
        <h3>My Appointments</h3>
        
        @if (Model.Appointments.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Caregiver</th>
                                    <th>Location</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                    <tbody>
                        @foreach (var appointment in Model.Appointments)
                        {
                            <tr>
                                <td>@appointment.Date.ToString("dd/MM/yyyy")</td>
                                <td>@appointment.Date.ToString("HH:mm")</td>
                                <td>@appointment.Caregiver?.Name</td>
                                <td>@appointment.Location</td>
                                <td>
                                    <!-- LAGT TIL: Slette-knapp for avtaler -->
                                    <form asp-action="DeleteAppointment" method="post" style="display: inline;" 
                                          onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                                        <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4>No Appointments</h4>
                <p>You don't have any appointments booked yet.</p>
            </div>
        }
    </div>

    <!-- Tilgjengelige omsorgspersoner - HÃ¸yre side -->
    <div class="col-md-6">
        <h3>Available Caregivers</h3>
        
        @if (Model.Caregivers.Any())
        {
            <div class="row">
                @foreach (var caregiver in Model.Caregivers)
                {
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@caregiver.Name</h5>
                                <p class="card-text">
                                    <strong>Email:</strong> @caregiver.Email<br>
                                    <strong>Phone:</strong> @caregiver.Phone<br>
                                    <strong>Address:</strong> @caregiver.Adress
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        @if (caregiver.Availability != null && caregiver.Availability.Any())
                                        {
                                            <span>Available for @caregiver.Availability.Count() time slots</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">No availability set</span>
                                        }
                                    </small>
                                </p>
                                <a asp-action="Book" asp-route-caregiverId="@caregiver.UserId" class="btn btn-primary btn-sm">
                                    View Available Times
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <h4>No Caregivers Available</h4>
                <p>There are no caregivers available at the moment.</p>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>
