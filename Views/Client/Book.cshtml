@model IEnumerable<app_ointment_backend.Models.TimeSlotViewModel>

@{
    ViewData["Title"] = "Book Appointment";
    var caregiver = ViewBag.Caregiver as app_ointment_backend.Models.Caregiver;
}

<h2>Book Appointment with @(caregiver?.Name ?? "Unknown")</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="row">
    <div class="col-md-8">
        <h3>Available Time Slots</h3>
        
        @if (Model.Any())
        {
            <!-- LAGT TIL: Dropdown-meny for tidsrom i stedet for mange kort -->
            <form asp-action="BookAppointment" method="post" class="mt-3">
                <input type="hidden" name="caregiverId" value="@caregiver.UserId" />
                
                <div class="form-group mb-3">
                    <label for="timeSlotSelect">Select Available Time Slot:</label>
                    <select id="timeSlotSelect" name="timeSlot" class="form-control" required>
                        <option value="">Choose a time slot...</option>
                        @foreach (var timeSlot in Model)
                        {
                            <option value="@timeSlot.Date.ToString("yyyy-MM-dd")|@timeSlot.StartTime|@timeSlot.EndTime">
                                @timeSlot.Date.ToString("dddd, MMMM dd, yyyy") - @timeSlot.StartTime til @timeSlot.EndTime
                            </option>
                        }
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label for="location">Location (optional)</label>
                    <input type="text" id="location" name="location" 
                           class="form-control" placeholder="Enter location or leave blank" />
                </div>
                
                <button type="submit" class="btn btn-success">
                    Book Selected Time Slot
                </button>
            </form>
        }
        else
        {
            <div class="alert alert-warning">
                <h4>No Available Time Slots</h4>
                <p>@caregiver.Name has not set any availability yet.</p>
            </div>
        }
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Caregiver Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @caregiver.Name</p>
                <p><strong>Email:</strong> @caregiver.Email</p>
                <p><strong>Phone:</strong> @caregiver.Phone</p>
                <p><strong>Address:</strong> @caregiver.Adress</p>
            </div>
        </div>
        
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to Caregivers</a>
        </div>
    </div>
</div>
