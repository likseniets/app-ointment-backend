@{
    ViewData["Title"] = "Min Dashboard";
    var currentUser = ViewBag.CurrentUser as app_ointment_backend.Models.User;
    var myAppointments = ViewBag.MyAppointments as List<app_ointment_backend.Models.Appointment>;
}

<div class="text-center mb-4">
    <h1 class="display-4">Velkommen, @currentUser.Name!</h1>
    <p class="lead">Ditt hjemmesykepleie dashboard</p>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body text-center">
                <h5 class="card-title"><i class="bi bi-calendar-check"></i> Mine Avtaler</h5>
                <p class="card-text display-4">@myAppointments.Count</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body text-center">
                <h5 class="card-title"><i class="bi bi-person-badge"></i> Helsepersonell</h5>
                <p class="card-text display-4">@myAppointments.Select(a => a.HealthcarePersonnelId).Distinct().Count()</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body text-center">
                <h5 class="card-title"><i class="bi bi-list-check"></i> Oppgaver</h5>
                <p class="card-text display-4">@myAppointments.Sum(a => a.Tasks.Count)</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="bi bi-calendar-week"></i> Mine kommende avtaler</h4>
            </div>
            <div class="card-body">
                @if (myAppointments != null && myAppointments.Count > 0)
                {
                    <div class="list-group">
                        @foreach (var appointment in myAppointments)
                        {
                            <a href="@Url.Action("Details", "Appointments", new { id = appointment.Id })" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">
                                        <i class="bi bi-person-badge"></i> @appointment.HealthcarePersonnel.Name
                                    </h5>
                                    <small>@appointment.AppointmentDate.ToString("dd MMM yyyy")</small>
                                </div>
                                <p class="mb-1">
                                    <strong>Tid:</strong> @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")<br />
                                    <strong>Oppgaver:</strong> @appointment.Tasks.Count
                                    @if (!string.IsNullOrEmpty(appointment.Notes))
                                    {
                                        <br /><strong>Notater:</strong> @appointment.Notes
                                    }
                                </p>
                                <small class="text-muted">
                                    @switch (appointment.Status)
                                    {
                                        case app_ointment_backend.Models.AppointmentStatus.Scheduled:
                                            <span class="badge bg-primary">Planlagt</span>
                                            break;
                                        case app_ointment_backend.Models.AppointmentStatus.InProgress:
                                            <span class="badge bg-warning">Pågår</span>
                                            break;
                                        case app_ointment_backend.Models.AppointmentStatus.Completed:
                                            <span class="badge bg-success">Fullført</span>
                                            break;
                                        case app_ointment_backend.Models.AppointmentStatus.Cancelled:
                                            <span class="badge bg-danger">Avlyst</span>
                                            break;
                                    }
                                </small>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Du har ingen kommende avtaler.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5><i class="bi bi-info-circle"></i> Hurtighandlinger</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Index", "Appointments")" class="btn btn-outline-primary">
                        <i class="bi bi-calendar-check"></i> Se alle mine avtaler
                    </a>
                    <a href="@Url.Action("Create", "Appointments")" class="btn btn-outline-success">
                        <i class="bi bi-plus-circle"></i> Be om ny avtale
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5><i class="bi bi-person-circle"></i> Min informasjon</h5>
            </div>
            <div class="card-body">
                <p><strong>Navn:</strong> @currentUser.Name</p>
                <p><strong>Email:</strong> @currentUser.Email</p>
                <p><strong>Telefon:</strong> @currentUser.Phone</p>
                <p><strong>Bruker siden:</strong> @currentUser.CreatedAt.ToString("dd MMM yyyy")</p>
            </div>
        </div>
    </div>
</div>
