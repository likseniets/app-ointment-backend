@model IEnumerable<User>
@{
    ViewData["Title"] = "Choose User";
}

<div class="container">
    <h1 class="mb-4">Choose a user</h1>
    <p class="text-muted">Mock login — pick a user to continue.</p>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var u in Model)
        {
            <div class="col">
                <a class="text-decoration-none" asp-controller="Home" asp-action="SelectUser" asp-route-id="@u.UserId">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2">@u.Name</h5>
                            <div class="mt-auto">
                                <span class="badge bg-secondary">@u.Role</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
