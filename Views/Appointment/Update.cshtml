@model app_ointment_backend.Models.Appointment

<h2>Change Appointment or details</h2>

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="AppointmentId" />
    <input type="hidden" asp-for="ClientId" />
    
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
<!-- Dropdown menus sourced from StackOverflow, logic and Id connections implemented with help from Cursor OpenAI extension for VSCode -->
        <label for="CaregiverId">Select caregiver</label><span class="text-danger">*</span>
        <select asp-for="CaregiverId" class="form-control" asp-items="ViewBag.CaregiverList"></select>
        <span asp-validation-for="CaregiverId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>
