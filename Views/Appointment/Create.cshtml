@model app_ointment_backend.ViewModels.CreateAppointmentViewModel

<h2>Create New Appointment</h2>

<div>
    <div>
        <form asp-action="Create" method="get">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="SelectedCaregiverId">Select caregiver</label>
                <select asp-for="SelectedCaregiverId" class="form-control" asp-items="Model.Caregivers">
                    <option value="">-- Select caregiver --</option>
                </select>
                <span asp-validation-for="SelectedCaregiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SelectedClientId">Select client</label>
                <select asp-for="SelectedClientId" class="form-control" asp-items="Model.Clients">
                    <option value="">-- Select client --</option>
                </select>
                <span asp-validation-for="SelectedClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SelectedDate">Select date</label>
                <input asp-for="SelectedDate" class="form-control" type="date" />
                <span asp-validation-for="SelectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.SelectedCaregiverId.HasValue && Model.SelectedDate.HasValue)
                {
                    if (Model.DateHasAvailability)
                    {
                        <div>Selected date has available time slots.</div>
                    }
                    else
                    {
                        <div>No availability for the selected date.</div>
                    }
                }
            </div>
            <button type="submit" class="btn btn-secondary">Show Available Times</button>
        </form>
    </div>

    <hr />

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="SelectedCaregiverId" />
        <input type="hidden" asp-for="SelectedClientId" />
        <input type="hidden" asp-for="SelectedDate" />

        <div class="form-group">
            <label for="SelectedTime">Time Slot</label>
            <select asp-for="SelectedTime" class="form-control" asp-items="Model.TimeSlots">
                <option value="">-- Select a time --</option>
            </select>
            <span asp-validation-for="SelectedTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location">Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Table" class="btn btn-secondary">Back to Table View</a>
    </form>
</div>
