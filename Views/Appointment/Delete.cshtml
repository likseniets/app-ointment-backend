@model Appointment

<h2>Cancel Appointment</h2>

<h3>Are you sure you want to cancel this appointment?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Appointment Id</dt>
        <dd class="col-sm-10">@Model.AppointmentId</dd>

        <dt class="col-sm-2">Date & Time</dt>
        <dd class="col-sm-10">@Model.Date</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.AppointmentId" method="post">
        @Html.AntiForgeryToken()
        @if (ViewBag.ReturnToManage == true)
        {
            <input type="hidden" name="returnToManage" value="true" />
            <input type="hidden" name="caregiverId" value="@ViewBag.ManageCaregiverId" />
        }
        <button type="submit" class="btn btn-danger">Cancel appointment</button>
        @if (ViewBag.ReturnToManage == true)
        {
            <a asp-controller="Availability" asp-action="Manage" asp-route-caregiverId="@ViewBag.ManageCaregiverId" class="btn btn-secondary">Go back</a>
        }
        else
        {
            <a asp-action="Table" class="btn btn-secondary">Go back</a>
        }
    </form>
</div>
