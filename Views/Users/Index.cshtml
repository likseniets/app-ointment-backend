@model IEnumerable<app_ointment_backend.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1><i class="bi bi-people"></i> Users</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Create New User
    </a>
</p>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Role == app_ointment_backend.Models.UserRole.HealthcarePersonnel)
                                {
                                    <i class="bi bi-person-badge text-primary"></i>
                                }
                                else
                                {
                                    <i class="bi bi-person-circle text-success"></i>
                                }
                                @item.Name
                            </td>
                            <td>
                                <i class="bi bi-envelope"></i> @item.Email
                            </td>
                            <td>
                                <i class="bi bi-telephone"></i> @item.Phone
                            </td>
                            <td>
                                @if (item.Role == app_ointment_backend.Models.UserRole.HealthcarePersonnel)
                                {
                                    <span class="badge bg-primary">Healthcare Personnel</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Elderly</span>
                                }
                            </td>
                            <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

