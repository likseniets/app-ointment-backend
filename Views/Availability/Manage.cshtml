@model app_ointment_backend.Models.Caregiver

@{
    ViewData["Title"] = "Manage Availability";
}

<h2>Manage Availability for @Model.Name</h2>

<div class="row mt-5">
    <div class="col-md-10">
        <h3>Booked Appointments</h3>
        @{
            var appts = ViewBag.CaregiverAppointments as IEnumerable<Appointment>;
        }
        @if (appts != null && appts.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Date & Time</th>
                        <th>Client</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in appts)
                    {
                        <tr>
                            <td>@a.Date.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(a.Client?.Name ?? "-")</td>
                            <td>@a.Location</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No booked appointments yet.</p>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <h3>Current Availability</h3>
        @if (Model.Availability != null && Model.Availability.Any())
        {
            var grouped = Model.Availability
                .OrderBy(a => a.Date)
                .ThenBy(a => a.StartTime)
                .GroupBy(a => a.Date.Date)
                .ToList();
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Available Time Slots</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in grouped)
                    {
                        var groupId = $"day-{g.Key:yyyyMMdd}";
                        var firstId = g.First().AvailabilityId;
                        <tr>
                            <td>@g.Key.ToString("dd/MM/yyyy")</td>
                            <td>
                                <select id="@groupId-select" class="form-select" onchange="document.getElementById('@groupId-hidden').value=this.value;">
                                    @foreach (var s in g)
                                    {
                                        <option value="@s.AvailabilityId">@s.StartTime - @s.EndTime</option>
                                    }
                                </select>
                            </td>
                            <td>
                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="document.getElementById('@groupId-hidden').value=document.getElementById('@groupId-select').value; return confirm('Delete selected slot?');">
                                    <input type="hidden" name="id" id="@groupId-hidden" value="@firstId" />
                                    <button type="submit" class="btn btn-danger btn-sm me-2">Delete</button>
                                </form>
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="window.location='@Url.Action("Update","Availability")/' + document.getElementById('@groupId-select').value">Edit</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No availability defined.</p>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Add New Availability</h3>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }
        <form asp-action="CreateInline" method="post">
            <input type="hidden" name="caregiverId" value="@Model.UserId" />

            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" class="form-control" required min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label for="startTime">Start Time</label>
                <input type="time" id="startTime" name="startTime" class="form-control" step="3600" required />
            </div>
            <div class="form-group">
                <label for="endTime">End Time</label>
                <input type="time" id="endTime" name="endTime" class="form-control" step="3600" required />
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="description" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary mt-3">Add Availability</button>
        </form>
    </div>
</div>



<div class="mt-4">
    <a asp-controller="User" asp-action="Table" class="btn btn-secondary">Back to Users</a>
</div>
